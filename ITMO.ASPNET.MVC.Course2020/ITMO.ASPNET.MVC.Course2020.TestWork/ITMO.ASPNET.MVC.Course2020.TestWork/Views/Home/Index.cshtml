@{ 
    ViewBag.Title = "Главная"; 
    }
<div class="row">
    <div class="col-md-4">
        
        <h2>Курсы</h2> 
        <table class="table-bordered" style="width:450px">
            <tr>
                <td><p>Название курса</p></td>
                <td><p>Продолжительность, ч</p></td>
                <td><p>Максимальный балл</p></td>
            </tr>
        @foreach (var c in ViewBag.Courses)
            {
                <tr>
                    <td><p>@c.Head</p></td>
                    <td><p>@c.Period</p></td>
                    <td><p>@c.Sum</p></td>                    
                </tr>
}
        </table> 
        <br>
        <p><a class="btn btn-default" href="/Home/CreateStudent">Добавить нового ученика &raquo;</a></p>
    </div>
</div>